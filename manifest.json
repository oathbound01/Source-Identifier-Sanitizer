{
    "manifest_version": 2,
    "name": "Source Identifier Sanitizer",
    "version": "0.2",
    "description": "Removes the Source Identifier parameter from YouTube links created with the Share button.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "https://www.youtube.com/*",
        "clipboardWrite"
    ],
    "browser_action": {
        "default_popup": "manual_sanitizer.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "sis_youtube.js"
            ]
        }
    ]
}
